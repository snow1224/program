import java.io.*;
import java.util.Random;
import java.math.*;


class EstPI {  
   public static void main(String args[]) {	
	   double x;
	   double y;
	   double dis;
	   int count=0;
	   for(int i=0; i<10000; i++) {
		  x = Math.random();
		  y = Math.random();
		  dis=Math.sqrt(x*x+y*y);
		  if(dis<1.0) count++;
	   }
       System.out.println(count*4.0/10000);
   }
} 
